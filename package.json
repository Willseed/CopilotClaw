{
  "name": "@willh/telegram-copilot-bot",
  "version": "1.0.0",
  "type": "module",
  "description": "Telegram bot that exposes the GitHub Copilot CLI through the Copilot SDK. Users can select a working directory and submit prompts to Copilot from Telegram.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.17",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "node-telegram-bot-api": "^0.67.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.10",
    "@types/node-telegram-bot-api": "^0.64.13",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
